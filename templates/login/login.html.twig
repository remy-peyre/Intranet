{% extends 'index.html.twig' %}

{% block body %}

    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <div class="container form_register">
        <h1 class="title_register">Se connecter Ã  l'intranet Interpool</h1>

        <form class="form_login" action="{{ path('login') }}" method="post">
            <label for="username">Username:
                <input type="text" id="username" name="_username" value="{{ last_username }}"/>
            </label>
            <label for="password">Password:
                <input type="password" id="password" name="_password"/>
            </label>
            <button class="button_register" type="submit">login</button>
        </form>
    </div>
    <div class="deja_inscrit">
        <a class="deja_inscrit" href="{{ path('user_registration') }}">
            Pas encore inscrit ?
        </a>
    </div>


{% endblock %}
